{
  "manifest_version": 2,
  "name": "WK Leech Trainer",
  "version": "0.2",
  "description": "Study those leeches! Squash 'em real good!",
  "permissions": [
    "webRequest",
    "*://www.wanikani.com/*",
    "storage"
  ],
  "browser_action": {
    "browser_style": true,
    "chrome_style": true,
    "default_title": "Wanikani Leech Trainer",
    "default_popup": "options/options.html"
  },
  "options_ui": {
    "page": "options/options.html",
    "open_in_tab": false
  },
  "background": {
    "scripts": [
      "background.js",
      "leeches-background.js"
    ]
  },
  "content_scripts": [
    {
      "matches": [
        "*://www.wanikani.com/",
        "*://www.wanikani.com/dashboard",
        "*://www.wanikani.com/kanji/*",
        "*://www.wanikani.com/vocabulary/*",
        "*://www.wanikani.com/radicals/*"
      ],
      "css": [
        "leech-trainer.css"
      ],
      "js": [
        "leech.js"
      ]
    }
  ]
}
